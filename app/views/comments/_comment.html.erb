<div class="row">
  <div class="col-md-4">
    <section class="user_info">
      <% if logged_in? %>
          <%= gravatar_for(current_user) %>
      <% end %>
        <p>
          <strong><%= comment.commenter %></strong>
        </p>

        <p>
          <%= comment.body %>
        </p>
    </section>
  </div>
</div>


<% if admin_logged_in? %>
    <p>
      <%= link_to 'Delete Comment', [comment.article, comment],
                  method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    </p>
<% end %>